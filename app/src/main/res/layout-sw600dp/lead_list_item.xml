<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/lead_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:text="@string/app_lead_description"
        android:textSize="18sp"
        android:textColorHint="@color/black"
        android:layout_marginLeft="10dp"
        android:textColor="@android:color/black" />


    <TextView
        android:id="@+id/lead_comp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lead_desc"
        android:layout_marginTop="5dp"
        android:text="@string/app_lead_company"
        android:textSize="18sp"
        android:textColorHint="@color/black"
        android:layout_marginLeft="10dp"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/lead_contname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lead_comp"
        android:layout_marginTop="5dp"
        android:text="@string/app_lead_contact"
        android:textSize="18sp"
        android:textColorHint="@color/black"
        android:layout_marginLeft="10dp"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/lead_mob"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lead_contname"
        android:layout_marginTop="5dp"
        android:text="@string/app_lead_mobile"
        android:textSize="18sp"
        android:textColorHint="@color/black"
        android:layout_marginLeft="10dp"
        android:textColor="@android:color/black" />


</RelativeLayout>